upstream websocket {
    server localhost:9000;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen      80;
    listen [::]:80;

    server_name sui-mainnet-rpc.bartestnet.com;

    location = /metrics {
        limit_except GET {
          deny all;
        }

        return 301 https://sui-mainnet-rpc.bartestnet.com/metrics;
    }

    location / {
        limit_except POST {
          deny all;
        }

        return 301 https://sui-mainnet-rpc.bartestnet.com;
     }
}

server {
    listen 443 ssl;

    ssl_certificate /etc/letsencrypt/live/sui-mainnet-rpc.bartestnet.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/sui-mainnet-rpc.bartestnet.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    server_name sui-mainnet-rpc.bartestnet.com;

    location /websocket {
        access_log off;

        proxy_pass http://websocket;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Host $host;
        proxy_set_header Connection "upgrade";
    }

    location = /metrics {
        limit_except GET {
          deny all;
        }

        proxy_redirect    http:// https://;
        proxy_pass http://localhost:9184;
        include proxy_params;
    }

    location / {
        limit_except POST {
          deny all;
        }

        proxy_redirect    http:// https://;
        proxy_pass http://localhost:9000;
        include proxy_params;
    }
}